.row#title
  .eight.columns
    %h1= "Edit #{name}"
.row
  .twelve.columns
    %form(action="/wiki" method="POST")
      %input(type="hidden" name="name" value=name)
      %label(for="text") Page Text
      %textarea(name="text" rows="20")= text
      %input.button(type="submit")
      %a.button.alert{:href => 'javascript:history.back(-1)'} Cancel

